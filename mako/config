# --- Urgency levels ---

[urgency=low]
# gray border for low priority
border-color=#888888
default-timeout=3000

[urgency=normal]
# white border for normal notifications
border-color=#FFFFFF
default-timeout=5000

[urgency=critical]
# red border for critical notifications
border-color=#FF0000
# persistent until dismissed
default-timeout=0
